{
    "name": "vscode-language-cimpl-client",
    "version": "0.1.4",
    "repository": {
        "type": "git",
        "url": "https://github.com/standardhealth/vscode-language-cimpl"
    },
    "description": "VSCode CIMPL Language Support: Client",
    "engines": {
        "vscode": "^1.20.0"
    },
    "license": "Apache-2.0",
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:cimpl"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "cimpl",
                "aliases": [
                    "CIMPL",
                    "cimpl"
                ],
                "extensions": [
                    ".txt",
                    ".cimpl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cimpl",
                "scopeName": "source.cimpl",
                "path": "./syntaxes/cimpl.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "VSCode CIMPL Configuration",
            "properties": {
                "vscodeCIMPLServer.enable": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Controls the enablement."
                },
                "vscodeCIMPLServer.options": {
                    "scope": "resource",
                    "type": "object",
                    "default": {},
                    "description": "Additional options."
                },
                "vscodeCIMPLServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the language server."
                }
            }
        }
    },
    "dependencies": {
        "vscode": "^1.1.18",
        "vscode-languageclient": "^3.5.0"
    },
    "devDependencies": {
        "vsce": "^1.37.5"
    },
    "scripts": {
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    }
}
